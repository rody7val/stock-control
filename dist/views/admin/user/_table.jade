//- name
td: a.btn.btn-link.btn-sm(href='/admin/users/{{user._id}}') {{user.name}}
//- email
td.text-center.bg-info {{user.email}}
//- type
td {{user.type ? user.type : 'Administrador'}}
//- Acciones
td
	a.left.btn.btn-outline-warning.btn-sm(
		ng-if='#{!user.edit}'
		href='/admin/users/{{user._id}}/edit'
	) Editar
	form.user-delete.left(method='post', action='/admin/users/{{user._id}}?_method=delete')
		input.btn.btn-outline-danger.btn-sm(
			type='submit'
			value='Borrar'
			onClick='return confirm("Eliminar: {{user.name}}?")'
		)