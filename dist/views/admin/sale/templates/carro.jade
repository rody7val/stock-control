//- carro
table.table.table-hover.body-form
	thead.thead-inverse
		tr
			th: h5.light Carro
			th
				.right.dropdown
					a.btn.btn-secondary.dropdown-toggle(
						id='editar'
						href=''
						data-toggle='dropdown'
						aria-haspopup='true'
						aria-expanded='true'
					) Acciones
					.dropdown-menu(aria-labelledby='editar')
						a.dropdown-item(
							href=''
							ng-click='cart.remove()'
						) Qitar item(s)
//- lista de items
div.list-group(style='min-height:299px;')
	label.list-group-item.list-group-item-action(
		class='active-{{item.done}}'
		ng-repeat='item in cart.selected'
	)
		input.none(
			type='checkbox'
			ng-model='item.done'
		)
		//- input(
		//- 	type='number'
		//- 	min='0'
		//- 	max='{{item.qty_ref}}'
		//- 	ng-model='item.qty_motion'
		//- 	value='{{item.qty_motion}}'
		//- 	style='width:50px'
		//- 	ng-change='cart.calculate({{item}})'
		//- )
		h6(style='display:inline-block').done {{item.name ? ' '+item.name : 'sin nombre'}}
		span.tag.tag-default.tag-pill.right Restan {{item.qty}} u
		.input-group.input-group-sm
			span.input-group-addon unidades
			input.form-control(
				type='number'
				min='0'
				max='{{item.qty_ref}}'
				ng-model='item.qty_motion'
				value='{{item.qty_motion}}'
				style='width:100px'
				ng-change='cart.calculate({{item}})')
		.input-group.input-group-sm
			span(style='margin-bottom:-1px').input-group-addon precio
			input.form-control(
				type='number'
              	min=0
              	step=0.05
				ng-model='item.price'
				value='{{item.price}}'
				style='width:118px'
				ng-change='cart.calculate({{item}})')
		.input-group.input-group-sm
			span.input-group-addon remarque
			input.form-control(
				type='number'
				min='0'
				ng-model='item.rem'
				value='{{item.rem}}'
				style='width:97px'
				ng-change='cart.calculate({{item}})')
