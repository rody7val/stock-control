{{cart.setUserId('#{session.user._id}')}}
table.table.table-hover.body-form
  thead.thead-inverse
    tr 
      th(colspan="2")
        h5.light Venta
  tbody
    tr 
      td Fecha:
      td.bg-info
        .motion-info.right
          input(
            class='form-control'
            style='padding:.3rem; font-size:20px'
            type='date'
            ng-model='cart.sale.date'
          )
    tr 
      td Cliente:
      td.bg-success
        .motion-info.right
          select(class='form-control',ng-model='cart.client')
            option(ng-repeat="client in cart.clients" value="{{client._id}}") {{client.name}}
    tr 
      td Remarque:
      td.bg-success
        .motion-info.right
          .input-group(style='border-collapse:unset; width:120px;')
            input(
              class='form-control'
              type='number'
              min=0.1
              step=0.1
              ng-model='cart.sale.remark'
              ng-change='cart.cartCalculate()'
            )
            span.input-group-addon %
    tr 
      td Unidades:
      td.bg-info
        p.motion-info.right {{cart.sale.items}} u
    tr 
      td Valor de venta:
      td.bg-info
        p.motion-info.right $ {{cart.priceFixed(cart.sale.sale_value)}}
    tr 
      td.bg-warning: h3.ligth(style="color: #373a3c") Total a pagar:
      td.bg-warning
        h3.ligth.right(style="color: #373a3c") $ {{cart.priceFixed(cart.sale.total)}}
