//- item/_form.jade
form(method='post', action='/admin/sales/new')
	fieldset(ng-if='cart.sale.items > 0 && cart.client != null && cart.sale.remark != "" && cart.sale.date != ""')
		input.none(
			id='date'
			type='datetime'
			name='sale[date]'
			ng-model='cart.sale.date'
		)
		input.none(
			id='client'
			type='text'
			name='sale[client]'
			ng-model='cart.client'
		)
		input.none(
			id='user'
			type='text'
			name='sale[user]'
			ng-model='cart.user'
		)
		input.none(
			id='items_qty'
			type='text'
			name='sale[items_qty]'
			value='{{cart.sale.items}}'
			placeholder='items_qty'
		)
		input.none(
			id='sale_value'
			type='text'
			name='sale[sale_value]'
			value='{{cart.sale.sale_value.toFixed(2)}}'
			placeholder='sale_value'
		)
		input.none(
			id='total'
			type='text'
			name='sale[total]'
			value="{{cart.sale.total.toFixed(2)}}"
			placeholder='total'
		)
		input.none(
			id='rem'
			type='text'
			step=0.1
			name='sale[rem]'
			ng-model='cart.sale.remark'
			placeholder='remarque'
		)
		input.none(
			id='_items'
			type='text'
			name='sale[_items]'
			value="{{cart.getSelected()}}"
			placeholder='_items'
		)
		input.btn.btn-lg.btn-success.right(id='submit', type='submit', value="Guardar")

	fieldset(ng-if='cart.sale.items == 0 || cart.client == null || cart.sale.remark == "" || cart.sale.date == ""', disabled="")
		input.btn.btn-lg.btn-outline-success.right(id='submit', type='submit', value="Guardar")