table.table.body-form
	thead.thead-inverse
		if client.edit
			tr
				th: h5.light Editar Cliente:
		else
			tr
				th: h5.light Nuevo Cliente:
if errors.length
	- var err = errors[0].message
fieldset.body-form
	//- nombre
	.form-group(class='#{errors.length && !(!err.name) ? "has-danger" : ""}')
		label.form-control-label(for='name'): #[b Nombre]
		input.form-control(
			class='#{errors.length && !(!err.name) ? "form-control-danger" : ""}'
			type='text'
			id='name'
			name='client[name]'
			placeholder= 'Nombre'
			value='#{errors.length || client.edit ? client.name : ""}'
		)
		if errors.length && !(!err.name)
			.form-control-feedback #{err.name.message}
	//- email
	.form-group(class='#{errors.length && !(!err.email) ? "has-danger" : ""}')
		label.form-control-label(for='email') #[b Email]
		input.form-control(
			class='#{errors.length && !(!err.email) ? "form-control-danger" : ""}'
			type='email'
			id='email'
			name='client[email]'
			placeholder='Email'
			value='#{errors.length || client.edit ? client.email : ""}'
		)
		if errors.length && !(!err.email)
			.form-control-feedback #{err.email.message}
			small.form-text.text-muted Ejemplo: "tuNombre@dominio.com"
	//- telefono
	.form-group(class='#{errors.length && !(!err.tel) ? "has-danger" : ""}')
		label.form-control-label(for='tel') #[b Teléfono]
		input.form-control(
			class='#{errors.length && !(!err.tel) ? "form-control-danger" : ""}'
			type='tel'
			id='tel'
			name='client[tel]'
			placeholder='Telefono'
			value='#{errors.length || client.edit ? client.tel : ""}'
		)
		if errors.length && !(!err.tel)
			.form-control-feedback #{err.tel.message}
			small.form-text.text-muted Ejemplo: "11 22334455"
	//- dirección
	.form-group(class='#{errors.length && !(!err.address) ? "has-danger" : ""}')
		label.form-control-label(for='address'): #[b Dirección]
		input.form-control(
			class='#{errors.length && !(!err.address) ? "form-control-danger" : ""}'
			type='text'
			id='address'
			name='client[address]'
			placeholder= 'Dirección'
			value='#{errors.length || client.edit ? client.address : ""}'
		)
		if errors.length && !(!err.address)
			.form-control-feedback #{err.address.message}
	//- notas
	.form-group(class='#{errors.length && !(!err.note) ? "has-danger" : ""}')
		label.form-control-label(for='note'): #[b Notas]
		input.form-control(
			class='#{errors.length && !(!err.note) ? "form-control-danger" : ""}'
			type='text'
			id='note'
			name='client[note]'
			placeholder= 'Notas'
			value='#{errors.length || client.edit ? client.note : ""}'
		)
		if errors.length && !(!err.note)
			.form-control-feedback #{err.note.message}
	input.btn.btn-primary(type='submit', value='Guardar')
	if client.edit
		a.btn.btn-link(href='/admin/clients/new') Cancelar