//- item/_form.jade
form(method='post', action='/admin/operation/new')

	fieldset(ng-if='cart.sale.items > 0')
		input.none(
			id='type'
			type='text'
			name='operation[type]'
			value='#{type}'
			placeholder='type'
		)
		input.none(
			id='type'
			type='text'
			name='operation[items_qty]'
			value='{{cart.sale.items}}'
			placeholder='items_qty'
		)
		input.none(
			id='type'
			type='text'
			name='operation[sale_value]'
			value='{{cart.sale.sale_value.toFixed(2)}}'
			placeholder='sale_value'
		)
		input.none(
			id='total'
			type='text'
			name='operation[total]'
			value="{{cart.sale.total.toFixed(2)}}"
			placeholder='total'
		)
		input.none(
			id='_items'
			type='text'
			name='operation[_items]'
			value="{{cart.getSelected()}}"
			placeholder='_items'
		)
		input.btn.btn-lg.btn-success.right(id='submit', type='submit', value="Guardar")

	fieldset(ng-if='cart.sale.items == 0', disabled="")
		input.btn.btn-lg.btn-outline-success.right(id='submit', type='submit', value="Guardar")