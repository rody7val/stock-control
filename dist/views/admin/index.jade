extends ../layout_admin.jade

block content
	if errors.length
		- var err = errors[0].message
	.head-title
		h1.text-center.light Configuración General
	.container
		form(
			action='/admin/global/edit?_method=put'
			method='post'
		)
			br
			br
			.row
				.col-md-3
					h6(name='configuracion-del-sitio') # Configuración del sitio
				.col-md-9
					fieldset
						//- title
						.form-group(class='#{errors.length && !(!err.title) ? "has-danger" : ""}')
							label.form-control-label(for='title'): b Titulo
							input.form-control(
								id='title'
								type='text'
								name='global[title]'
								value='#{errors.length ? global.title : session.global.title}'
							)
							if errors.length && !(!err.title)
								.form-control-feedback #{err.title.message}
						//- desc
						.form-group(class='#{errors.length && !(!err.desc) ? "has-danger" : ""}')
							label.form-control-label(for='desc'): b Descripción
							input.form-control(
								id='desc'
								type='text'
								name='global[desc]'
								value='#{errors.length ? global.desc : session.global.desc}'
							)
							if errors.length && !(!err.desc)
								.form-control-feedback #{err.desc.message}
			.form-group
				input.right.btn.btn-outline-primary(
					type='submit'
					value='Guardar cambios'
				)