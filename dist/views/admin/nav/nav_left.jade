//- General
if session.user.admin
	li.nav-item.nav-admin(class='#{nav == "general" ? "nav-admin-active" : ""}')
		a#general.nav-link(href='/admin') GENERAL
//- Registrar
li.nav-item.nav-admin.dropdown(class='#{nav == "registrar" ? "nav-admin-active" : ""}')
	a#registrar.nav-link.dropdown-toggle(
		href='/#'
		data-toggle="dropdown"
		aria-haspopup="true"
		aria-expanded="true"
	) REGISTRAR
	.dropdown-menu(aria-labelledby='registrar')
		if session.user.admin
			a.dropdown-item(href='/admin/item/new') Producto
			.dropdown-divider
			a.dropdown-item(href='/admin/clients/new') Cliente
			a.dropdown-item(href='/admin/providers/new') Proveedor
			a.dropdown-item(href='/admin/users/new') Administrador
		else
			a.dropdown-item(href='/admin/clients/new') Cliente
