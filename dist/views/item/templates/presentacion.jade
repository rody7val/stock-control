.tab-pane(
	id="cart"
	class='{{currentPage == 1 ? "active" : ""}}'
)
	br
	.card
		.card-block
			- var stocked = item.qty > 0 ? true : false;
			h4.card-title #{item.name} #[span.tag(class='#{stocked ? "tag-success" : "tag-danger"}') #{stocked ? "Stock" : "Agotado"}]
		img.img-fluid(style='width:100%',src='/img/img.svg', alt='#{item.name}')
		.card-block
			p #{item.desc}
			a.card-link(href='#') Añadir al carro
			a.card-link(href='#') Ver más