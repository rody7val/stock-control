//- layout.jade
- var title = title ? title : session.global.title;
doctype html
html(lang='es')
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		block meta
		script(src='/js/bundle.js', type="text/javascript")
		script(src='/js/jquery-3.1.1.min.js', type="text/javascript")
		script(src='/js/tether.min.js', type="text/javascript")
		script(src='/js/bootstrap.min.js', type="text/javascript")
		block js
		link(href='/css/bootstrap.min.css', rel="stylesheet", type="text/css")
		link(href='/css/style.css', rel="stylesheet", type="text/css")
		block css
		block title
			title #{title}
	body
		#main
			nav#nav.navbar.navbar-fixed-top.navbar-dark.bg-success
				.container
					a.navbar-brand(href='/') #{title}
					button.navbar-toggler.hidden-sm-up.right(
						data-toggle='collapse'
						data-target='#collapsing-navbar'
						aria-controls='collapsing-navbar'
						aria-expanded='true'
						aria-label="Toggle navigation"
					)
					#collapsing-navbar.collapse
						#e.bg-inverse
							ul.nav.navbar-nav.left
								include ./public/nav/nav_left.jade
							ul.nav.navbar-nav.right
								include ./public/nav/nav_right.jade
					#noCollapsing-navbar
						ul.nav.navbar-nav.left
							include ./public/nav/nav_left.jade
						ul.nav.navbar-nav.right
							include ./public/nav/nav_right.jade
			block background-item
			#index
				block msjFlash
				block content
		#footer
			.title-form.container
				hr
				br
				h4.text-center.light #{title}
				br
		block js_footer