//- user/new.jade
extends ../../layout.jade

block js
	script(src='/js/angular-1.1.5.min.js', type="text/javascript")
	script(src='/js/user/new.js', type="text/javascript")

block css
	link(href='/css/user/new.css', rel='stylesheet' , type='text/css')


block content
	.head-title
		.container
			h1.text-center.light Nuevo usuario
	.container
		br
		if count == 0
			.alert.alert-success
				h4.alert-heading Primer usuario administrador.
				p Bienvenido! Por ser el primer usuario registrado, serás el administrador por defecto.
				p Completa los siguientes campos con exito y seras el administrador del sistema.
		br
		include ./_form.jade
		br
		#user-form.center.body-form Ya estas registrado? #[a(href='/session/login') Inicia sesión]
		script(type='text/javascript').
			$('#email').on('input', function(e) {
				//generar posible nombre de usuario
				$('#username').val( e.target.value.match(/[^@]+/)[0] );
			});
