table.table.table-hover.body-form
  thead.thead-inverse
    tr 
      th(colspan="2")
        h3.light {{cart.getOperationType()}}
  tbody 
    tr 
      td Cantidad de productos:
      td.bg-info
        p.motion-info {{cart.sale.items}} u
    tr 
      td Valor de la venta:
      td.bg-info
        p.motion-info $ {{cart.toFixed(cart.sale.sale_value)}}
    tr 
      td Remarque:
      td.bg-success
        p.motion-info {{cart.sale.remark}} %
    tr 
      td.bg-warning: h3.ligth(style="color: #373a3c") Total a pagar:
      td.bg-warning
        h3.ligth(style="color: #373a3c") $ {{cart.toFixed(cart.sale.total)}}

//- affix
script(type="text/javascript").
  $(window).on('scroll', function(event) {
    var scrollValue = $(window).scrollTop();
    if (scrollValue > 126) $('#sale').addClass('top');
    if (scrollValue < 126) $('#sale').removeClass('top');
  });
