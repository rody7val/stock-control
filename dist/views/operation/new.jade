//- motion/new.jade
extends ../layout.jade

block title 
	title Nuevo Movimiento

block js
	script(src='/js/angular-1.1.5.min.js', type="text/javascript")
	script(src='/js/operation/new.js', type="text/javascript")

block content
	if errors.length
		- var err = errors[0].message
	div(ng-app='stock-control')
		.head-title
			h1.text-center.light Nuevo Movimiento
		.container
			div(ng-controller="OperationController")
				.row.row-space
					.col-md-6
						.row
							br
							include ./templates/buscador.jade
						.row
							br
							include ./templates/carro.jade
					.col-md-6
						#affix
							br
							include ./templates/operacion.jade
							include ./_form.jade
block js_footer							
script(type="text/javascript").
	$('#not-submit').popover({
	  trigger: 'focus'
	})