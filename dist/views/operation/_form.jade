//- item/_form.jade
form(method='post', action='/operation/new')
	fieldset.none
		label(for='type'): b Tipo
		input(
			id='type'
			type='text'
			name='operation[type]'
			value='#{type}'
		)
		label(for='total'): b Total
		input(
			id='total'
			type='text'
			name='operation[total]'
			value="{{cart.toFixed(cart.sale.total)}}"
		)
		label(for='_items'): b Items
		input(
			id='_items'
			type='text'
			name='operation[_items]'
			value="{{cart.getSelected()}}"
		)
	input.btn.btn-lg.btn-outline-success(id='submit', type='submit', value="Guardar")